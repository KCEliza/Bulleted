            <div class="row center testROWS">
                <div class="section sectionForm" id="todaysForm">

                    <div class="col s12 m6 l6">
                        <div class="card white">
                            <div class="card-content gray-text text-darken-4">
                                <span class="card-title center">Today</span>
                                <div class="divider"></div>
                                <ul class="myUL">

                                    {{#each todays}}
                                    {{#if completed}}
                                    <span class="todo">
                                        <li class="completed" id={{id}}>{{todo}}
                                            <span class="deleteItem" id={{id}}>X</span></li>
                                    </span>
